        <!-- Creating the parameter Username as type= "text"-->
        <div id="weathercon">
            <i class="fas fa-city" style="color: #000000;"></i>
        </div>
        <div class="info">
            
        
        <label class="location">Enter City: </label> 
        <input type="text" placeholder="City" name="city"><br><br> 
        <button class="button-7">Get RealTime Weather</button> 
    </div>
